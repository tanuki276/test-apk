<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 1. 食材入力部分 -->
    <TextView
        android:id="@+id/text_view_input_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="利用可能な食材を入力 (例: 鶏肉、玉ねぎ、卵)"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_settings" />

    <!-- 設定ボタン -->
    <Button
        android:id="@+id/button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="設定"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edit_text_ingredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="卵、醤油、バターなど"
        android:minHeight="48dp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/text_view_input_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_camera" />

    <ImageButton
        android:id="@+id/button_camera"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:contentDescription="カメラで食材をスキャン"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_ingredients"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_text_ingredients" />


    <!-- 2. 価格帯入力部分 (新規追加) -->
    <TextView
        android:id="@+id/text_view_price_range_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="価格帯 (一食あたり、オプション)"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_ingredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edit_text_min_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="最低価格 (円)"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/text_view_price_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_price_range_title" />

    <TextView
        android:id="@+id/text_view_price_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="〜"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/edit_text_min_price"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_max_price"
        app:layout_constraintTop_toTopOf="@+id/edit_text_min_price"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_min_price"/>

    <EditText
        android:id="@+id/edit_text_max_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="最高価格 (円)"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_view_price_divider"
        app:layout_constraintTop_toBottomOf="@+id/text_view_price_range_title" />


    <!-- 3. レシピ設定 (Spinner) -->
    <TextView
        android:id="@+id/text_view_recipe_settings_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="レシピ設定 (難易度、ジャンル、時間、制約)"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_min_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 難易度 -->
    <Spinner
        android:id="@+id/spinner_difficulty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/spinner_genre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_recipe_settings_title" />

    <!-- ジャンル -->
    <Spinner
        android:id="@+id/spinner_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinner_difficulty"
        app:layout_constraintTop_toBottomOf="@+id/text_view_recipe_settings_title" />

    <!-- 調理時間 -->
    <Spinner
        android:id="@+id/spinner_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/spinner_diet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_difficulty" />

    <!-- 食事制限 -->
    <Spinner
        android:id="@+id/spinner_diet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinner_time"
        app:layout_constraintTop_toBottomOf="@+id/spinner_genre" />


    <!-- 4. レシピ生成ボタン -->
    <Button
        android:id="@+id/button_generate_recipe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="レシピを提案する"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_time" />
        
    <!-- 5. プログレスバー -->
    <ProgressBar
        android:id="@+id/progress_bar_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/button_generate_recipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 6. レシピ出力エリア -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#f5f5f5"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar_loading">

        <TextView
            android:id="@+id/text_view_recipe_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ここにレシピがストリーミングで表示されます。"
            android:textSize="16sp" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>