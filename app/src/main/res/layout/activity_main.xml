<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 設定ボタン: 右上隅に配置 -->
    <Button
        android:id="@+id/button_settings"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="設定"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="-16dp"
        android:layout_marginTop="-8dp" />

    <TextView
        android:id="@+id/label_ingredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="利用可能な食材を入力（例: 鶏肉、玉ねぎ、卵）"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_settings" />

    <EditText
        android:id="@+id/edit_text_ingredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="食材をコンマ区切りで入力"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:maxLines="4"
        android:gravity="top|start"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_ingredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_camera"
        android:autofillHints="" />

    <ImageButton
        android:id="@+id/button_camera"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="食材の画像を撮影"
        app:layout_constraintTop_toTopOf="@+id/edit_text_ingredients"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_ingredients"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/label_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="レシピ設定（難易度、ジャンル、時間、制約）"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_ingredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinner_difficulty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/difficulty_options"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinner_genre" />

    <Spinner
        android:id="@+id/spinner_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/genre_options"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_settings"
        app:layout_constraintStart_toEndOf="@+id/spinner_difficulty"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinner_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/time_options"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_difficulty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinner_diet" />

    <Spinner
        android:id="@+id/spinner_diet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/dietary_options"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_genre"
        app:layout_constraintStart_toEndOf="@+id/spinner_time"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/button_generate_recipe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="レシピを提案する"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button_generate_recipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/text_view_recipe_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ここにレシピがストリーミングで表示されます。"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="#EFEFEF"
            android:textColor="@android:color/black" />

    </ScrollView>
    
    <!-- ここに不足していたProgressBarを追加します。 -->
    <!-- MainActivity.java の findViewById(R.id.progress_bar_loading) の参照を解決します。 -->
    <ProgressBar
        android:id="@+id/progress_bar_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminate="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>