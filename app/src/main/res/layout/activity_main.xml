<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ヘッダーエリア (タイトル、履歴ボタン、設定ボタン) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/text_app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_centerVertical="true"/>

            <!-- 1. 履歴ボタン (右端に配置) -->
            <Button
                android:id="@+id/button_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_history"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_alignParentEnd="true"
                android:minHeight="0dp"
                android:minWidth="0dp"/>

            <!-- 2. 設定ボタン (履歴ボタンの左隣に配置) -->
            <Button
                android:id="@+id/button_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_settings"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:layout_toStartOf="@id/button_history"
                android:layout_marginEnd="8dp"
                android:minHeight="0dp"
                android:minWidth="0dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_ingredients"
            android:textStyle="bold"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/edit_text_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_ingredients"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_bg"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_use_all_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_use_all_ingredients"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/button_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_camera_text"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/content_description_camera" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_price_range"
            android:textStyle="bold"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">
            <EditText
                android:id="@+id/edit_text_min_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hint_min_price"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_bg"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="〜"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:textColor="#333333"/>

            <EditText
                android:id="@+id/edit_text_max_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hint_max_price"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_bg"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主食の分類"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginBottom="4dp"/>
            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_spinner_bg"
                android:entries="@array/type_options"
                android:padding="8dp"/>
            <EditText
                android:id="@+id/edit_optional_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="任意：主食の分類を自由に指定"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext_bg"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="難易度"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:layout_marginBottom="4dp"/>
                <Spinner
                    android:id="@+id/spinner_difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner_bg"
                    android:entries="@array/difficulty_options"
                    android:padding="8dp"/>
                <EditText
                    android:id="@+id/edit_optional_difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="任意：難易度を自由に指定"
                    android:inputType="text"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ジャンル"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:layout_marginBottom="4dp"/>
                <Spinner
                    android:id="@+id/spinner_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner_bg"
                    android:entries="@array/genre_options"
                    android:padding="8dp"/>
                <EditText
                    android:id="@+id/edit_optional_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="任意：ジャンルを自由に指定"
                    android:inputType="text"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="調理時間"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:layout_marginBottom="4dp"/>
                <Spinner
                    android:id="@+id/spinner_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner_bg"
                    android:entries="@array/time_options"
                    android:padding="8dp"/>
                <EditText
                    android:id="@+id/edit_optional_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="任意：調理時間を自由に指定"
                    android:inputType="text"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="食事制限"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:layout_marginBottom="4dp"/>
                <Spinner
                    android:id="@+id/spinner_diet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_spinner_bg"
                    android:entries="@array/dietary_options"
                    android:padding="8dp"/>
                <EditText
                    android:id="@+id/edit_optional_diet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="任意：食事制限を自由に指定"
                    android:inputType="text"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_instructions"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/edit_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_instructions"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="4"
            android:gravity="top"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_bg"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/button_generate_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_generate_recipe"
            android:backgroundTint="#007BFF"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <ProgressBar
            android:id="@+id/progress_bar_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="生成されたレシピ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <!-- レシピ出力エリア -->
        <TextView
            android:id="@+id/text_view_recipe_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/rounded_output_bg"
            android:text="@string/text_recipe_initial"
            android:textColor="#333333"
            android:textSize="14sp"
            android:minHeight="150dp"/>

    </LinearLayout>
</ScrollView>