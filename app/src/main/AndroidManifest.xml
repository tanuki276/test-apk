<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 必須: インターネット通信権限 (APIクライアントに必須) -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- 生体認証機能を使用しないため、このプロジェクトでは不要ですが、残しておきます。 -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" /> 

    <!-- 【必須追加】外部ストレージへの書き込み権限 (ダウンロード機能に必要 - Android 9 (API 28)以下向け) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        
        <!-- 【必須追加】targetApi 34に必要なデータ抽出ルール -->
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        
        <!-- 【追加】WRITE_EXTERNAL_STORAGEを使用するための互換設定 -->
        android:requestLegacyExternalStorage="true"
        
        tools:targetApi="34">

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SettingsActivity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="APIキー設定"
            android:parentActivityName=".MainActivity" />
            
        <!-- 【必須追加】HistoryActivity (履歴画面) の登録 -->
        <activity 
            android:name=".HistoryActivity"
            android:exported="false"
            android:label="履歴"
            android:parentActivityName=".MainActivity" />

    </application>
</manifest>